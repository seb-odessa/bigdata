#!/bin/sh

. ./_setup_environment

$RUN hdfs dfs -test -d $HDFS_ROOT || $RUN hdfs dfs -mkdir $HDFS_ROOT || exit
$RUN hdfs dfs -test -d $DATASET || $RUN hdfs dfs -mkdir $DATASET || exit
$RUN hdfs dfs -test -d $SCHEMAS || $RUN hdfs dfs -mkdir $SCHEMAS || exit

for avsc in facebook-friends.avsc facebook-network.avsc
do
    $RUN hdfs dfs -test -f $SCHEMAS/${avsc} || $RUN hdfs dfs -put schema/${avsc} $SCHEMAS || exit
done


