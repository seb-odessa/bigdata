#!/bin/sh

# tools
RESULTS=report
RUN=../tools/exec

# data
HDFS_DIR=/user/$(whoami)
DATA_DIR=$HDFS_DIR/dataset
DATA_FILE=facebook_combined.txt
DATA_LOCAL=dataset/$DATA_FILE
DATA_REMOTE=$DATA_DIR/$DATA_FILE

$RUN hdfs dfs -test -d $HDFS_DIR || $RUN hdfs dfs -mkdir $HDFS_DIR || exit
$RUN hdfs dfs -test -d $DATA_DIR || $RUN hdfs dfs -mkdir $DATA_DIR || exit
$RUN hdfs dfs -test -f $DATA_REMOTE || $RUN hdfs dfs -put $DATA_LOCAL $DATA_REMOTE || exit
